@using DataModel;
@using DataModel.PocoClasses;
@{
    ViewBag.Title = "Payment";

}

<div class="row">
    
    @{ 
        DataContext dataContext = new DataContext();

        int movieID = 0;

        if (ViewBag.MovieId == null || ViewBag.MovieId == Convert.ToString(-1))
        {

            movieID = (from c in dataContext.Movies
                       select c).ToList()[0].MovieId;
        }
        else
        {
            movieID = Convert.ToInt32(ViewBag.MovieId);
        }

        Movie movie = (from c in dataContext.Movies
                       where c.MovieId == movieID
                       select c).ToList()[0];

        <div class="col-md-1"></div>
        <div class="col-sm-7 col-md-5">
            <br />
            <img src="~/Images/@movie.MovieImage" alt="moviePhoto" style="width:360px;height:500px;" class="img-thumbnail" />
            <h3><b>@movie.MovieName</b></h3>
        
        </div>
        <div class="col-sm-5 col-md-6">
            <h3>Choose date and time</h3>
            <form>
                <i style="padding-left:5px">Date & Time:</i>
                <select>
                    <option value="null"></option>
                    <option value="15">@movie.StartTime</option>
                </select>
                <h2>@ViewBag.Title</h2>
                <h5 style="padding-bottom:-10px;">
                    Payment method&nbsp&nbsp&nbsp:
                    <select style="margin-left:10px">
                        <option value="visa">Visa</option>
                        <option value="mastercard">MasterCard</option>
                    </select>
                </h5>
                <br />
                <p>
                    Choose the row in the cinema hall :

                    <select style="margin-left:10px" name="row">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="2">3</option>
                    </select>
                </p>
                <p>
                    Choose the column in the cinema hall : 
                    
                    <select style="margin-left:10px" name="column">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="2">3</option>
                        <option value="2">4</option>
                        <option value="2">5</option>
                    </select>
                </p>
                <br />
                <i>Card Nr.</i><br /><input type="text" name="cardnr" style="width:250px;margin-top:5px"/><br /><br />
                <i>Name</i><br /><input type="text" name="name" style="width:250px;margin-top:5px"/><br /><br />
                <i>Expiration Date</i><br /><input type="date" name="expDate" style="width:250px;margin-top:5px"/><br /><br />
                <i>CVC Number</i><br /><input type="password" name="cvc" style="width:250px;margin-top:5px"/><br /><br />
                <i style="padding-top:5px">Phone Number</i><br /><input type="number" value="+45" size="1" disabled /><input type="tel" name="tel" size="14" style="width:250px;padding-left:10px;margin-top:5px" /><br /><br /><br />
                <input type="submit" value="Confirm" id="submit_button"/>
            </form>
        </div>

    }
</div>

